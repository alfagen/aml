nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed aria-expanded="false" data-target="#bs-example-navbar-collapse-1" data-toggle="collapse" type="button"
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
    = link_to app_title, orders_path, class: 'navbar-brand'
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        = active_link_to orders_path, wrap_tag: :li do
          = title_with_counter 'Заявки клиентов', AML::Order.with_pending_state.count

        - if current_user.administrator?
          li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: :dropdown }, role: :button, 'aria-haspopup' => true, 'aria-expanded' => false do
              | Управление
              = fa_icon 'lock-open'
              span.m-l-sm.caret
            ul.dropdown-menu
              = active_link_to 'Клиенты', clients_path, wrap_tag: :li
              = active_link_to 'Клиентская информация', client_infos_path, wrap_tag: :li
              = active_link_to 'Документы клиентов', order_documents_path, wrap_tag: :li
              li.divider
              = active_link_to 'Статусы', statuses_path, wrap_tag: :li
              = active_link_to 'Чек-листы', check_lists_path, wrap_tag: :li
              = active_link_to 'Группы документов', document_groups_path, wrap_tag: :li
              = active_link_to 'Причины отказов', reject_reasons_path, wrap_tag: :li
              = active_link_to 'Пользовательские соглашения', agreements_path, wrap_tag: :li
              = active_link_to 'Настройка уведомлений', notifications_path, wrap_tag: :li
              li.divider
              = active_link_to 'Операторы', operators_path, wrap_tag: :li
              - unless Rails.env.production?
                li.divider
                = active_link_to 'Полный сброс данных', reset_db_path, wrap_tag: :li, method: :delete, data: { confirm: 'Сбросить полностью данные (документы, анкеты, кроме операторов) без восстановления?' }
                = active_link_to 'Сброс клиентов', drop_clients_path, wrap_tag: :li, method: :delete, data: { confirm: 'Сбросить клиентов?' }
                = active_link_to 'Сброс заявок', drop_orders_path, wrap_tag: :li, method: :delete, data: { confirm: 'Сбросить заявки?' }
      - if logged_in?
        ul.nav.navbar-nav.navbar-right
          li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: :dropdown }, role: :button, 'aria-haspopup' => true, 'aria-expanded' => false do
              = "#{current_user.email} (#{current_user.role})"
              span.m-l-sm.caret
            ul.dropdown-menu
              = active_link_to 'Сменить пароль', edit_password_path(current_user), wrap_tag: :li
              = active_link_to 'Редактировать профиль', edit_user_path, wrap_tag: :li
              li.divider
              li= link_to 'Выйти', logout_path, method: :delete
